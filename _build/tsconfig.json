{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "..",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"]
    }
  },
  "include": ["src", "../pages"],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
