  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ngext build",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/ngext",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "args": ["build"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ngext dev",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/ngext",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "args": ["dev"]
    }
  ]
}